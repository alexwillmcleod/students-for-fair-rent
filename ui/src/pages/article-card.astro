---
let imageUrl = 'https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.tsamgt.com%2Fwp-content%2Fuploads%2FWPH_AKL_Waiparuru-Hall.jpg&f=1&nofb=1&ipt=f655de7e029eb381f77be73739ea8308d1bb237058cd1e363be2e1647f658f59&ipo=images';
if (Astro.props.element.frontmatter.image != undefined && Astro.props.element.frontmatter.image.url != undefined) {
  imageUrl = Astro.props.element.frontmatter.image.url;
}
---

<a href={Astro.props.element.url} class="relative flex flex-col justify-end w-96 h-64 rounded-xl shadow-xl backdrop-blur-xs p-4">
  <!-- Background Image -->
  <div class="absolute rounded-xl inset-0 bg-cover bg-center" style={`background-image: url(${imageUrl})`} ></div>

  <!-- Gradient Overlay -->
  <div class="absolute rounded-xl inset-0 bg-gradient-to-b from-transparent to-gray-900"></div>

  <h2 class="relative text-xl text-white font-bold">{Astro.props.element.frontmatter.title}</h2>
  <p class="relative text-white">{Astro.props.element.frontmatter.subtitle}</p>
  <p class="relative text-white ">{new Date(Astro.props.element.frontmatter.pubDate).toDateString()}</p>
</a>